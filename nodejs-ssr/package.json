{
  "name": "assmat-facile",
  "version": "1.0.0",
  "description": "React WebApp for AssMat Facile",
  "repository": "git@github.com:LinkValue-Booster/assmat-facile.git",
  "homepage": "https://github.com/Linkvalue-Booster/assmat-facile",
  "author": "LinkValue <contact@link-value.fr>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/**"
  ],
  "engines": {
    "node": ">=11.12.0",
    "yarn": ">= 1.12.0"
  },
  "scripts": {
    "start": "node ./dist/api",
    "build": "webpack --env.production=true",
    "dev": "node ./scripts/dev",
    "test": "BABEL_ENV=test jest",
    "test:ci": "BABEL_ENV=test jest --ci --reporters=default --reporters=jest-junit -w 8",
    "lint": "eslint \"**/*.{js,ts,jsx,tsx}\"",
    "typecheck": "tsc",
    "storybook": ": ${PORT:=9001} && start-storybook -c ./packages/storybook -p $PORT",
    "storybook:build": "build-storybook -c ./packages/storybook",
    "version": "yarn changelog && git add CHANGELOG.md",
    "changelog": "conventional-changelog -c .conventional-changelog -p angular -i CHANGELOG.md -s -r 0"
  },
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@babel/preset-env": "^7.4.3",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@hot-loader/react-dom": "^16.8.6",
    "@types/cheerio": "^0.22.11",
    "@types/enzyme": "^3.9.1",
    "@types/express": "^4.16.1",
    "@types/jest": "^24.0.11",
    "@types/morgan": "^1.7.35",
    "@types/react": "^16.8.13",
    "@types/react-dom": "^16.8.3",
    "@types/react-router": "^4.4.5",
    "@types/react-router-config": "^1.1.2",
    "@types/react-router-dom": "^4.3.1",
    "@types/storybook__addon-options": "^4.0.1",
    "@types/storybook__react": "^4.0.1",
    "@typescript-eslint/eslint-plugin": "^1.6.0",
    "@typescript-eslint/parser": "^1.6.0",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.5",
    "babel-plugin-emotion": "^10.0.9",
    "clean-webpack-plugin": "^2.0.1",
    "conventional-changelog-cli": "^2.0.12",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.12.1",
    "enzyme-to-json": "^3.3.5",
    "error-overlay-webpack-plugin": "^0.2.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.12.4",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^24.7.1",
    "jest-junit": "^6.3.0",
    "nodemon": "^1.18.10",
    "pnp-webpack-plugin": "^1.4.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-hot-loader": "^4.8.3",
    "terser-webpack-plugin": "^1.2.3",
    "typescript": "^3.4.2",
    "webapp-webpack-plugin": "^2.6.1",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.3.0",
    "webpack-dev-server": "^3.2.1",
    "webpack-manifest-plugin": "^2.0.4",
    "webpack-node-externals": "^1.7.2",
    "webpack-pwa-manifest": "^4.0.0",
    "workbox-webpack-plugin": "^4.2.0",
    "core-js": "^3.0.1"
  },
  "jest": {
    "testURL": "http://localhost",
    "testPathIgnorePatterns": [
      "packages/config/*",
      "cache/*",
      ".yarn/*"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/jestSetup.js"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "jsx",
      "mjs",
      "ts",
      "tsx"
    ],
    "modulePathIgnorePatterns": [
      "cache/*",
      ".yarn"
    ],
    "moduleNameMapper": {
      "\\.(css|jpg|png|svg|woff|woff2|otf)$": "<rootDir>/tests/emptyModule.js"
    },
    "transform": {
      "^.+\\.m?[tj]sx?$": "babel-jest"
    },
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  },
  "dependencies": {
    "core-js": "^3.0.1"
  }
}
